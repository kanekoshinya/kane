.group
  .group__header
    .group__header-left
      = link_to root_path,class:"toppage-btn"  do
        Enjoy-app
    .group__header-right
      = link_to edit_user_path(current_user),class:"name-edit" do
        = current_user.name
  .group__name
    .group__name-list
      グループ一覧
      = link_to new_category_path,class:"group__name-list-new" do
        ジャンル作成
      = link_to new_group_path,class:"group__name-list-new" do
        グループ作成
    .group__name-name
      - @group.each do |group|
        = link_to group_messages_path(group),class:"group-btn" do
          = group.name