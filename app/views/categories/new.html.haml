.group
  = render "shared/header"
  .category
    .category__name
      ジャンル名を入れてください
    =form_for @category do |c|
      = c.text_field :name, class: "chat-group-form__input", placeholder: "カテゴリー名を入力してください"
      = c.submit "Save", class: "chat-group-form__action-btn"
    .category__category
      ジャンル一覧
    .category__group
      - @categories.each do |category|
        = category.name

      
